<% include header %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-xs-12">
			<br>
			<ul> <%for(var i =0; i<festivals.length; i++){%>
				<ul class="list-group">
					<div id="options">
						<li class="list-group-item">
							<div> <img class="logo" src="http://www.thetakes.com/festivals/<%= festivals[i].logoUrl %>"> 
								<form class = "moreInfoBtn" action = '/id/<%= festivals[i].name %>' method = 'get'>
									<button type="submit" class="btn btn-default moreBtn">Find Out More</button>
								</form>
								</div>
							<%var date= new Date(festivals[i].lastDeadline).toString().split(" ")%>

							<p><div class="name"> <%= festivals[i].name%></div> <strong> Fee: </strong> <%=festivals[i].fee%> </p>
							<p><strong> Country: </strong> <%=festivals[i].country%> </p>
							<p><strong> Category: </strong> <%=festivals[i].category.toString().split(",").join(", ")%> </p>
							<p><strong> Date: </strong> <%= date[1]+" "+date[2]+" "+date[3] %></p>
						</li> 
					</div>
					<%}%>
					<br>
				</ul>
			</ul>
			<%if(festivals.length === 0){%>
			<h4> No results found. Please broaden your search terms. </h4>
			<%}%>
		</div>
	</div>
</div>
<% include footer %>